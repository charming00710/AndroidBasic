<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/margin150"
    android:layout_height="@dimen/margin100"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin28"
            android:text="@string/search_hit"
            android:textSize="@dimen/text_size15" />

        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:orientation="horizontal">
            
        
        <EditText
            android:id="@+id/editText1"
            android:layout_width="@dimen/margin80"
            android:layout_height="@dimen/margin20"
            android:layout_marginLeft="@dimen/margin5"
            android:background="@color/tucency"
            android:ems="5"
            android:textSize="@dimen/text_size15" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/margin35"
            android:layout_height="@dimen/margin28"
            android:background="@drawable/sousuo" />
</LinearLayout>
</LinearLayout>