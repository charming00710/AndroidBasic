<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guide_background" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/margin150"
        android:layout_height="@dimen/margin150"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon_flaying_favorite" />

    <TextView
        android:id="@+id/tv_showpath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin100"
        android:text="一键扫描手机内的歌曲"
        android:textColor="@color/blackcolor"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/img_scanMusci"
        android:layout_width="@dimen/margin150"
        android:layout_height="@dimen/margin50"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_showpath"
        android:layout_marginTop="@dimen/margin50"
        android:src="@drawable/saomiao" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="@dimen/margin150"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_showpath"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin20"
        android:textColor="@color/blackcolor"
        android:text="共扫描到：0首歌" />

</RelativeLayout>